	"event": [
		{
			"listen": "prerequest",
			"script": {
				"type": "text/javascript",
				"exec": [
					"// Auto-fetch CSRF token for POST/PUT/DELETE requests",
					"if (['POST', 'PUT', 'DELETE', 'PATCH'].includes(pm.request.method)) {",
					"    const csrfToken = pm.environment.get('csrfToken');",
					"    if (!csrfToken) {",
					"        pm.sendRequest({",
					"            url: pm.environment.get('baseUrl') + '/api/csrf',",
					"            method: 'GET'",
					"        }, function (err, res) {",
					"            if (!err && res.code === 200) {",
					"                const token = res.json().data.token;",
					"                pm.environment.set('csrfToken', token);",
					"                pm.request.headers.add({",
					"                    key: 'X-CSRF-Token',",
					"                    value: token",
					"                });",
					"            }",
					"        });",
					"    } else {",
					"        pm.request.headers.add({",
					"            key: 'X-CSRF-Token',",
					"            value: csrfToken",
					"        });",
					"    }",
					"}"
				]
			}
		}
	],
